{
  "name": "simpleton",
  "displayName": "Simpleton",
  "description": "Syntax highlighting for Simpleton scripting language: https://github.com/Mkdirs/simpleton",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "simpleton",
      "aliases": ["Simpleton", "simpleton"],
      "extensions": ["smpl"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "simpleton",
      "scopeName": "source.simpleton",
      "path": "./syntaxes/simpleton.tmLanguage.json"
    }]
  }
}
